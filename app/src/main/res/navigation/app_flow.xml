<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_flow"
    app:startDestination="@id/hospitalListFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.healthapp.ui.user.LoginFragment"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.healthapp.ui.user.RegisterFragment"
        tools:layout="@layout/fragment_register" />
    <fragment
        android:id="@+id/hospitalListFragment"
        android:name="com.example.healthapp.ui.hospital.HospitalListFragment"
        tools:layout="@layout/fragment_hospital_list" >
        <action
            android:id="@+id/action_hospitalListFragment_to_hospitalDetailFragment"
            app:destination="@id/hospitalDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/hospitalAddFragment"
        android:name="com.example.healthapp.ui.hospital.HospitalAddFragment"
        tools:layout="@layout/fragment_hospital_add" />
    <fragment
        android:id="@+id/hospitalDetailFragment"
        android:name="com.example.healthapp.ui.hospital.HospitalDetailFragment"
        tools:layout="@layout/fragment_hospital_detail" >
        <argument
            android:name="name"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="address"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/userFragment"
        android:name="com.example.healthapp.ui.user.UserFragment"
        tools:layout="@layout/fragment_user" />

</navigation>